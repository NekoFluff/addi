{
  "swagger": "2.0",
  "info": {
    "description": "HTTP server in Go with Swagger endpoints definition.",
    "title": "go-rest-api",
    "version": "0.1.0"
  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/dsp": {
      "post": {
        "summary": "Get the optimal recipe",
        "description": "Get the optimal recipe",
        "parameters": [
          {
            "in": "body",
            "name": "recipeRequest",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/RecipeRequest"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Recipe"
              }
            }
          }
        }
      }
    },
    "/dsp/items": {
      "get": {
        "summary": "Get all items",
        "description": "Get all items",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/DSPItem"
              }
            }
          }
        }
      }
    },
    "/dsp/items/reload": {
      "post": {
        "summary": "Re-scrapes the DSP items",
        "description": "Re-scrapes the DSP items",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "string",
              "enum": [
                "OK"
              ]
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "Check on the health of the server",
        "operationId": "checkHealth",
        "produces": [
          "text/plain"
        ],
        "responses": {
          "200": {
            "description": "OK.",
            "schema": {
              "type": "string",
              "enum": [
                "OK"
              ]
            }
          }
        }
      }
    }
  },
  "definitions": {
    "DSPItem": {
      "properties": {
        "name": {
          "type": "string"
        },
        "produce": {
          "type": "number"
        },
        "madeIn": {
          "type": "string"
        },
        "time": {
          "type": "number"
        },
        "materials": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/DSPMaterial"
          }
        }
      }
    },
    "DSPMaterial": {
      "properties": {
        "name": {
          "type": "string"
        },
        "count": {
          "type": "number"
        }
      }
    },
    "RecipeRequest": {
      "properties": {
        "name": {
          "type": "string"
        },
        "count": {
          "type": "number"
        }
      },
      "required": [
        "name",
        "count"
      ]
    },
    "Recipe": {
      "properties": {
        "produce": {
          "type": "string"
        },
        "madeIn": {
          "type": "string"
        },
        "numberOfFacilitiesNeeded": {
          "type": "number"
        },
        "consumesPerSec": {
          "type": "object"
        },
        "secondsSpendPerCrafting": {
          "type": "number"
        },
        "craftingPerSecond": {
          "type": "number"
        },
        "for": {
          "type": "string"
        }
      }
    }
  }
}
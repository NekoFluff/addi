{
  "swagger": "2.0",
  "info": {
    "description": "HTTP server in Go with Swagger endpoints definition.",
    "title": "go-rest-api",
    "version": "0.1.0"
  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/dsp": {
      "get": {
        "description": "Get the optimal recipe",
        "parameters": [
          {
            "in": "body",
            "name": "recipeRequest",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/RecipeRequest"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Recipe"
              }
            }
          }
        }
      }
    },
    "/dsp/items": {
      "get": {
        "description": "Get all items",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/DSPItem"
              }
            }
          }
        }
      }
    },
    "/healthz": {
      "get": {
        "operationId": "checkHealth",
        "produces": [
          "text/plain"
        ],
        "responses": {
          "200": {
            "description": "OK.",
            "schema": {
              "type": "string",
              "enum": [
                "OK"
              ]
            }
          }
        }
      }
    },
    "/hello/{user}": {
      "get": {
        "description": "Returns a greeting to the user!",
        "parameters": [
          {
            "name": "user",
            "in": "path",
            "type": "string",
            "required": true,
            "description": "The name of the user to greet."
          }
        ],
        "responses": {
          "200": {
            "description": "Returns the greeting.",
            "schema": {
              "type": "string"
            }
          },
          "400": {
            "description": "Invalid characters in \"user\" were provided."
          }
        }
      }
    },
    "/gopher/{name}": {
      "get": {
        "description": "Return the Gopher Image.",
        "produces": [
          "image/png"
        ],
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "type": "string",
            "required": true,
            "description": "The name of the Gopher to display."
          }
        ],
        "responses": {
          "200": {
            "description": "Returns the Gopher.",
            "schema": {
              "type": "file"
            }
          }
        }
      }
    },
    "/users/{userId}": {
      "get": {
        "summary": "Returns a user by ID.",
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/users": {
      "post": {
        "summary": "Creates a new user.",
        "parameters": [
          {
            "in": "body",
            "name": "user",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "name"
      ]
    },
    "DSPItem": {
      "properties": {
        "name": {
          "type": "string"
        },
        "produce": {
          "type": "number"
        },
        "madeIn": {
          "type": "string"
        },
        "time": {
          "type": "number"
        },
        "materials": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/DSPMaterial"
          }
        }
      }
    },
    "DSPMaterial": {
      "properties": {
        "name": {
          "type": "string"
        },
        "count": {
          "type": "number"
        }
      }
    },
    "RecipeRequest": {
      "properties": {
        "name": {
          "type": "string"
        },
        "count": {
          "type": "number"
        }
      },
      "required": [
        "name",
        "count"
      ]
    },
    "Recipe": {
      "properties": {
        "produce": {
          "type": "string"
        },
        "madeIn": {
          "type": "string"
        },
        "numberOfFacilitiesNeeded": {
          "type": "number"
        },
        "consumesPerSec": {
          "type": "object"
        },
        "secondsSpendPerCrafting": {
          "type": "number"
        },
        "craftingPerSecond": {
          "type": "number"
        },
        "for": {
          "type": "string"
        }
      }
    }
  }
}